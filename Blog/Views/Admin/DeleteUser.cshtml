@model Blog.Entities.DTOs.Account.UserViewDto

<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title" id="deleteUserModalLabel">Видалення користувача</h5>
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<div class="modal-body">
		<form asp-action="DeleteUser" asp-controller="Admin" method="post">
			<span>
				Ви дійсно бажаєте видалити цього користувача? <br />
				@Model.UserName
			</span>
			<button type="button" class="btn btn-primary">Видалити</button>
		</form>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	</div>
</div>
