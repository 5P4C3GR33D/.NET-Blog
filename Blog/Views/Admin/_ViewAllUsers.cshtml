@model IEnumerable<Blog.Entities.DTOs.Account.UserViewDto>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/css/userCard.css" rel="stylesheet" />
<link href="~/css/social.css" rel="stylesheet" />

<div class="container-fluid d-flex justify-content-center">
	<div class="">
		@foreach (var item in Model)
		{
			<div class="card card-stats m-5" style="max-width: 540px; min-width: 540px;">
				<div class="card-header card-header-warning card-header-icon">
					<div class="row" style="height: 12em;">
						<div class="col-4">
							<div class="row">
								<div class="col">
									<div class="card-icon">
										<img src="~/unkown.png" class="card-img" alt="...">
									</div>
								</div>
							</div>
							<div class="row mt-2 text-center control-buttons ">
								<div class="col text-center">
									<a @*onclick="showInPopup('@Url.Action("Update","Account", new { id = item.Id }, Context.Request.Scheme)',
														'Редагування користувача')"*@ asp-action="Update" asp-controller="Account" asp-route-id="@item.Id">
										<img class="ico" src="~/lib/bootstrap/dist/open-iconic-master/svg/pencil.svg">
									</a>
								</div>
								<div class="col text-center">
									<form asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@item.Id" onsubmit=" return jQueryAjaxDelete(this);">
										<div class="ed-del-buttons">
											<button type="submit">
												<img class="ico" src="~/lib/bootstrap/dist/open-iconic-master/svg/trash.svg">
											</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card-body">
					<h4 class="card-title">@item.UserName</h4>
					<h3 class="card-title">
						Email:
						<small>@item.Email</small>
					</h3>
				</div>
				<div class="card-footer">
					<div class="row mb-3" style="height: 3em;">
						<div class="col d-flex justify-content-center">
							<div class="social">
								<ul>
									@if (item.FacebookLink != null)
									{
										<li><a href="@item.FacebookLink.ToString()"><i class="fa fa-lg fa-facebook"></i></a></li>
									}

									@if (item.TwitterLink != null)
									{
										<li><a href="@item.TwitterLink.ToString()"><i class="fa fa-lg fa-twitter"></i></a></li>

									}

									@if (item.LinkedInLink != null)
									{
										<li><a href="@item.LinkedInLink.ToString()"><i class="fa fa-lg fa-linkedin"></i></a></li>
									}

									@if (item.InstagramLink != null)
									{
										<li><a href="@item.InstagramLink.ToString()"><i class="fa fa-lg fa-instagram"></i></a></li>
									}

									@if (item.YoutubeLink != null)
									{
										<li><a href="@item.YoutubeLink.ToString()"><i class="fa fa-lg fa-youtube"></i></a></li>
									}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
