@model Blog.Entities.DTOs.Account.UserAuthenticateDto

@{
	ViewData["Title"] = "Вхід";
}

<link href="~/css/authenticate.css" rel="stylesheet" type="text/css" />

<div class="container d-flex ">
	<div class="container w-50  ">
		<div class="bg-white p-5 ">
			<form asp-action="Authenticate" asp-controller="Account" method="post">
				<h2 class="text-center mb-5">Travel blog</h2>
				<h3 class="text-left">Вхід</h3>
				<div>
					<label class="mt-3 text-left">Введіть ваш email:</label><br />
					<input class="w-100" asp-for="Email" placeholder="Email" type="email" />
				</div>
				<div>
					<label class="mt-3 text-left">Введіть ваш пароль:</label><br />
					<input class="w-100" type="password" asp-for="Password" placeholder="Пароль" />
				</div>

				<div class="small mt-2">
					<a class="text-left mb-0" asp-action="" asp-controller="">Забули пароль?</a><br />
					Немає облікового запису? <a asp-action="Register" asp-controller="Account">Створіть його!</a>
				</div>
				<div class="text-center">
					<input class="mt-5 w-50 btn btn-outline-info" type="submit" value="Увійти" />
				</div>
			</form>
		</div>
	</div>
</div>
