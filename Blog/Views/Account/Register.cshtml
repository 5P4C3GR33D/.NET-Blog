@model Blog.Entities.DTOs.Account.UserRegisterDto

@{
	ViewData["Title"] = "Реєстрація";
}

<link href="~/css/register.css" rel="stylesheet" type="text/css" />

<div class="container d-flex">
	<div class="container w-50 justify-content-center ">
		<div class="bg-white p-5">
			<form asp-action="Register" asp-controller="Account" method="post">
				<h2 class="text-center mb-5">Travel blog</h2>
				<h3 class="text-left">Реєстрація</h3>
				<div>
					<label class="text-left">Введіть ім'я користувача:</label><br />
					<input class="w-100" asp-for="UserName" placeholder="Ім'я користувача" />
				</div>
				<div>
					<label class="mt-3 text-left">Введіть ваш email:</label><br />
					<input class="w-100" asp-for="Email" placeholder="Email" type="email" />
				</div>
				<div>
					<label class="mt-3 text-left">Введіть ваш пароль:</label><br />
					<input class="w-100" type="password" asp-for="Password" placeholder="Пароль" />
					<span asp-validation-for="Password"></span>
				</div>
				<div>
					<label class="mt-3 text-left">Підтвердіть ваш пароль:</label><br />
					<input class="w-100" type="password" asp-for="PasswordConfirm" placeholder="Пароль" />
					<span asp-validation-for="PasswordConfirm"></span>
				</div>
				<div class="text-center">
					<input class="mt-5 w-50 btn btn-outline-info" type="submit" value="Зареєструватись" />
				</div>
			</form>
		</div>
	</div>
</div>

