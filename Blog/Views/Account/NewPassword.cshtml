@model Blog.Entities.DTOs.Account.UserNewPasswordDto

@{
	ViewData["Title"] = "Password recovery";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/common.css" rel="stylesheet" type="text/css" />

<div class="vertical-center">
	<div class=" bg-white p-5 rounded w-50">
		<form asp-action="NewPassword" asp-controller="Account" method="post">
			<h2 class="text-center mb-4">Travel blog</h2>
			<h3 class="text-left">
				Створіть новий пароль
			</h3>
			<input type="hidden" asp-for="UserEmail" />
			<input type="hidden" asp-for="Id" />
			<div class="form-group row mt-4 px-3">
				<label class="col-form-label">Новий пароль:</label><br />
				<input class="w-100" asp-for="NewPassword" placeholder="Новий пароль" type="password" />
			</div>
			<div class="form-group row mt-4 px-3">
				<label class="col-form-label">Введіть новий пароль повторно:</label><br />
				<input class="w-100" asp-for="NewPasswordConfirm" type="password" placeholder="Введіть новий пароль повторно" />
			</div>
			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-outline-info mt-4">Підтвердити</button>
			</div>

		</form>
	</div>
</div>